{
  "name": "professional_portfolio_2019",
  "version": "2.0.0",
  "description": "Full-Stack MERN Portfolio",
  "main": "index.js",
  "scripts": {
    "dev": "better-npm-run dev",
    "start": "better-npm-run start",
    "start:stage": "better-npm-run build_run:stage",
    "lint": "better-npm-run lint:js",
    "test": "better-npm-run test",
    "test:watch": "yarn test --watch",
    "clean": "better-npm-run clean:test",
    "coveralls": "yarn clean:test && better-npm-run coveralls"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon ./index.js",
      "env": {
        "NODE_PATH": "./eslServer",
        "PORT": 3000
      }
    },
    "start": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./eslServer",
        "PORT": 8080
      }
    },
    "lint:js": {
      "command": "eslint --fix ./src ./tools ./index.js ./eslClient ./db ./imapClient"
    },
    "build_run:stage": {
      "command": "bash ./scripts/pm2-start-stage.sh"
    },
    "test": {
      "command": "jest --coverage",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "clean:test": {
      "command": "rm -rf ./coverage"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "author": "M.E. Villarreal",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "accepts": "^1.3.7",
    "axios": "^0.18.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto-random-string": "^3.0.1",
    "dotenv": "^8.1.0",
    "esm": "^3.2.25",
    "express": "^4.16.3",
    "express-jwt": "^6.0.0",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "modesl": "^1.2.1",
    "mongoose": "^5.6.10",
    "mongoose-paginate-v2": "^1.3.1",
    "negotiator": "^0.6.2",
    "shortid": "^2.2.15",
    "winston": "^3.2.1"
  }
}
